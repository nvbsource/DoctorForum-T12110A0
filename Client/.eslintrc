{
   "extends": ["react-app", "prettier"],
   "plugins": ["react", "prettier"],
   "rules": {
      "prettier/prettier": [
         "warn",
         {
            "arrowParens": "avoid",
            "semo": false,
            "trailingComma": "none",
            "endOfLine": "lf",
            "tabWidth": 3,
            "useTabs": false,
            "singleQuote": true,
            "printWidth": 120,
            "jsxSingleQuote": false
         }
      ]
   }
}